{
    "rulesDirectory": [
        "./"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                180
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}